<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/formBackground"
            tools:context=".infrastructure.MainActivity">

        <by.mikemladinskiy.pzz.app.PzzHeader
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:titleText="@string/deliveryAvailabilityScreenTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/streetLabel"
                android:labelFor="@id/streetEditText"
                android:text="@string/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="19dp"
                android:fontFamily="@font/pt_sans_caption"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/streetEditText"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/streetEditText"
                app:layout_constraintStart_toStartOf="@+id/streetEditText"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="SpUsage"/>
        <AutoCompleteTextView
                android:id="@+id/streetEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="19dp"
                android:fontFamily="@font/pt_sans_caption"
                android:background="@drawable/edit_text_background"
                android:inputType="text|textNoSuggestions"
                android:textColorHint="@color/primaryText"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:elevation="3dp"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="132dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage"/>

        <TextView
                android:id="@+id/buildingLabel"
                android:labelFor="@id/buildingEditText"
                android:text="@string/house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="19dp"
                android:fontFamily="@font/pt_sans_caption"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/buildingEditText"
                app:layout_constraintEnd_toEndOf="@+id/buildingEditText"
                app:layout_constraintStart_toStartOf="@+id/buildingEditText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/streetEditText"
                tools:ignore="SpUsage"/>

        <by.mikemladinskiy.pzz.app.controls.InstantAutoCompleteTextView
                android:id="@+id/buildingEditText"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="19dp"
                android:fontFamily="@font/pt_sans_caption"
                android:background="@drawable/edit_text_background"
                android:inputType="text|textNoSuggestions"
                android:textColorHint="@color/primaryText"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:elevation="3dp"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buildingLabel"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="SpUsage"/>
        <Button
                android:id="@+id/button"
                style="@style/StandardBigButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/standard_big_button_height"
                android:text="@string/next"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <RelativeLayout
                android:id="@+id/progressBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#afffffff"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

            <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>