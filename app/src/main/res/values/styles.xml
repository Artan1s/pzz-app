<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>

        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarThumbVertical">@color/primaryText</item>
    </style>

    <style name="StandardBigButton">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/pt_sans_caption_bold</item>
        <item name="android:textSize" tools:ignore="SpUsage">19dp</item>
        <item name="android:textColor">#FCFCFC</item>
    </style>

    <style name="StandardSmallButton">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/pt_sans_caption</item>
        <item name="android:textSize" tools:ignore="SpUsage">19dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
